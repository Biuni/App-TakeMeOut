<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageViewSettingLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/setting_icon"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@+id/checkBoxSettingOffline"
        android:layout_width="179dp"
        android:layout_height="wrap_content"
        android:text="ModalitÃ  Offline"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="27dp"/>

    <TextView
        android:id="@+id/textViewSettingIPServer"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:text="Indirizzo IP server"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="27dp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"/>

    <EditText
        android:id="@+id/editTextSettingIPServer"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:ems="10"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/buttonSettingBluetoothPerm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ab. permessi bluetooth"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="27dp"/>

    <Button
        android:id="@+id/buttonSettingSaveEdit"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:text="Salva modifiche"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="27dp"
        android:background="@color/colorOrange"/>

</android.widget.LinearLayout>