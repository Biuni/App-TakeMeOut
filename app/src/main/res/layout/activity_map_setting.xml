<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageViewMapSettDestination"
            android:layout_width="118sp"
            android:layout_height="120sp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginBottom="20sp"
            app:srcCompat="@drawable/map_sett_dest"/>

        <ImageView
            android:id="@+id/imageViewMapSettCurrPos"
            android:layout_width="118sp"
            android:layout_height="120sp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginBottom="20sp"
            app:srcCompat="@drawable/map_sett_no_blue"/>

        <TextView
            android:id="@+id/textViewMapSettDestination"
            android:layout_width="118sp"
            android:layout_height="120sp"
            android:layout_row="1"
            android:layout_column="0"
            android:text="Seleziona destinazione"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:background="@color/colorLightBlue"/>

        <TextView
            android:id="@+id/textViewMapSettCurrPos"
            android:layout_width="118sp"
            android:layout_height="120sp"
            android:layout_row="1"
            android:layout_column="2"
            android:text="Seleziona posizione corrente (assenza Bluetooth)"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:background="@color/colorOrange"/>

        <Spinner
            android:id="@+id/spinnerMapSettDestinationFloor"
            android:layout_width="118sp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="20sp">

        </Spinner>

        <TextView
            android:id="@+id/textViewMapSettFloor"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:text="PIANO"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBlack"/>

        <Spinner
            android:id="@+id/spinnerMapSettCurrPosFloor"
            android:layout_width="118sp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginTop="20sp">

        </Spinner>

        <Spinner
            android:id="@+id/spinnerMapSettDestinationRoom"
            android:layout_width="118sp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="20sp">

        </Spinner>

        <TextView
            android:id="@+id/textViewMapSettRoom"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="STANZA"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:textColor="@color/colorBlack"/>

        <Spinner
            android:id="@+id/spinnerMapSettCurrPosRoom"
            android:layout_width="118sp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_marginTop="20sp">

        </Spinner>

    </GridLayout>

    <Button
        android:id="@+id/buttonMapSettStartSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avvia ricerca"
        android:textSize="16sp"
        android:layout_marginTop="25sp"/>

</android.widget.LinearLayout>